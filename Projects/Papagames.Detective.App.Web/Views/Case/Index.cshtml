@{
    // Case / Index
    ViewBag.Title = "Detective game";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using Papagames.Detective.Core.Game
@model Papagames.Detective.App.Web.Models.SchemaModel

<h2>Cases</h2>

<ul>
    @foreach (Case c in Model.Cases)
    {
        <li>
            @Html.ActionLink(string.Format("#{0}: {1} {2}/{3}", c.Id, c.WorldName, c.MemberNum, c.MurdererNum), "Details", new { id = c.Id })
        </li>
    }
</ul>   