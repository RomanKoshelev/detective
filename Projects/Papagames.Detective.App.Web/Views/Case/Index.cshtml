@model Papagames.Detective.App.Web.Models.SchemeModel
@{
    ViewBag.Title = "Detective Cases";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Cases</h2>

<ul>
    @foreach (var c in Model.Cases)
    {
        <li>
            @Html.ActionLink(c.ShortInfo, "Info", new { id = c.Id })
        </li>
    }
</ul>   