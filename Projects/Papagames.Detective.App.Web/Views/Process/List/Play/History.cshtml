@using Papagames.Detective.App.Web.Models
@using Papagames.Detective.Core.Game
@using Papagames.Detective.Utils
@model HistoryModel

<ul>
    @foreach (var day in Model.Days)
    {
        <li>
            Day @day:
            <ul>
                <li>
                    Active: @Model.Participations(day).FoldToStringBy(r => r.Agent.MemberHistoryName)
                </li>
                @foreach (var rec in Model.RealActions(day))
                {
                    <li>
                        @string.Format(rec.Action.VerbalTemplate(), rec.Agent.MemberHistoryName, rec.Subject.MemberHistoryName)
                    </li>
                }
            </ul>
        </li>
    }
</ul>