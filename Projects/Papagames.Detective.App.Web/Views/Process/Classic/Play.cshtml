@*
// ============================================================================================= []
// >> View: Process/Classic/Play
*@
@using Papagames.Detective.App.Web.Models
@using Papagames.Detective.Core.Game
@using Papagames.Detective.Utils
@using Action = Papagames.Detective.Core.Game.Action
@model ProcessModel
@{
    ViewBag.Title = "Crime Nuts Case #" + Model.CaseId;
    Layout = "~/Views/Shared/Layouts/Classic.cshtml";
    ViewData["id"] = Model.Id;
    _primaryMember = 2;
    _action = Action.Answer;
}
@*
// ============================================================================================= []
// Functions
*@
@functions {

    private MemberModel Member(int num)
    {
        Assert.IsTrue(MemberExists(num), "Member {0} does't exist", num);
        return Model.Members.First(m => m.Number == num);
    }

    private string MemberName(int num)
    {
        var name = Model.Members.Where(m => m.Number == num).Select(m => m.Name).FirstOrDefault();
        return name ?? " ";
    }

    private bool MemberExists(int num)
    {
        return Model.Members.Any(m => m.Number == num);
    }

    private bool MemberIsActive(int num)
    {
        return Model.ActiveMembers.Any(m => m.Number == num);
    }

    private bool MemberIsPrimary(int num)
    {
        return _primaryMember == num;
    }

    private string CurrentCardClass(int num)
    {
        return MemberIsPrimary(num) ? " det-card-primary" : MemberIsActive(num) ? " det-card-secondary" : "";
    }

    private string ActiveCardClass(int num)
    {
        return MemberIsActive(num) ? " det-card-active" : " det-card-inactive";
    }

    private int _primaryMember;
    private Action _action;

    private string CurrentMemberFaceClass(int num)
    {
        return
            MemberIsActive(num)
                ? MemberIsPrimary(num)
                    ? " det-member-face-active-primary"
                    : " det-member-face-active-secondary"
                : Member(num).IsOpenMurderer
                ? " det-member-face-inactive-murderer"
                : Member(num).IsOpenInnocent
                ? " det-member-face-inactive-innocent"
                :"";
    }

    private string MemberFaceEmotionClass(int num)
    {
        return MemberIsAlive(num) ? " det-member-face-text-alive vertical" : " det-member-face-text-dead";
    }

    private MvcHtmlString MemberFace(int num)
    {
        return new MvcHtmlString(
            MemberIsAlive(num) ?
                EmotionMarker(num) :
                "x x<br>__"
            );
    }

    private Emotion MemberEmotion(int num)
    {
        switch (_action)
        {
            case Action.Answer:
                if (MemberIsPrimary(num))
                {
                    return Emotion.Indifferent;
                }
                if (MemberExists(_primaryMember))
                {
                    return Member(num).ExpressEmotionOnRelationTo(Member(_primaryMember));
                }
                break;
        }
        return Emotion.Indifferent;
    }

    private string EmotionMarker(int num)
    {
        switch (MemberEmotion(num))
        {
            case Emotion.Happy:
                return ":)";
            case Emotion.Sad:
                return ":(";
            case Emotion.Indifferent:
                return ":|";
            default:
                return "ERROR";
        }
    }

    private bool MemberIsAlive(int num)
    {
        return !Member(num).IsVictim;
    }

    private string ActionPlaceholder(int num)
    {
        return MemberIsPrimary(num) ? "ask" : MemberIsActive(num) ? "about" : "";
    }

}


