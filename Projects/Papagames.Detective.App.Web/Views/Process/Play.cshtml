@using Papagames.Detective.Core.Game
@using Papagames.Detective.Utils
@using Papagames.Detective.App.Web.Models
@using Action = Papagames.Detective.Core.Game.Action
@model ProcessModel
@{
    // Book: Process.Play View
    ViewBag.Title = "Play Detective Process";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["id"] = Model.Id;
}

<h2>@Model.ShortInfo</h2>

<ul>
    <li>
        Process Info:
        <ul>
            <li>
                @Html.ActionLink(Model.Case.ShortInfo, "Info", "Case", new {id = Model.CaseId}, new {name = "case"})
            </li>
            <li>
                State: @Model.State
            </li>
            @if (Model.State != State.Finished)
            {
                <li>
                    Murderers left: @("Unknown".IfNull(Model.MurderersLeft))
                </li>
                <li>
                    Last night evidences num: @("Unknown".IfNull(Model.LastNightEvidencesNum))
                </li>
            }
            else
            {
                <li>
                    Winner: @Model.Winner
                </li>
            }
        </ul>
    </li>

    <li>
        Members:
        <ul>
            <li>
                Active:
                @{ Html.RenderPartial("~/Views/Process/Common/MemberList.cshtml", Model.ActiveMembers, ViewData); }
            </li>
            <li>
                Prisoners:
                @{ Html.RenderPartial("~/Views/Process/Common/MemberList.cshtml", Model.Prisoners, ViewData); }
            </li>
            <li>
                Victims:
                @{ Html.RenderPartial("~/Views/Process/Common/MemberList.cshtml", Model.Victims, ViewData); }
            </li>
        </ul>
    </li>

    <li>
        Emotions:
        <ul>
            <li>
                On Murder:
                @{
                    ViewData["EmotionType"] = Action.MurderEmotion;
                    Html.RenderPartial("~/Views/Process/Common/EmotionList.cshtml", Model.History, ViewData);
                }
            </li>

            <li>
                On Arrest:
                @{
                    ViewData["EmotionType"] = Action.ArrestEmotion;
                    Html.RenderPartial("~/Views/Process/Common/EmotionList.cshtml", Model.History, ViewData);
                }
            </li>
        </ul>
    </li>


    <li>
        Answers:
        @{ Html.RenderPartial("~/Views/Process/Common/AnswerList.cshtml", Model.History, ViewData); }
    </li>
    <li>
        Actions:
        @{ Html.RenderPartial("~/Views/Process/Common/UserActionList.cshtml", Model.UserActions, ViewData); }
    </li>
</ul>