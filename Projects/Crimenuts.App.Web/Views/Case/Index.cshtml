@model Crimenuts.App.Web.Models.SchemaModel

@{
    // >> | View | Case | Index *
    ViewBag.Title = string.Format("{0}",
        Localization.Text("Title:Crime Nuts")
        );
    Layout = "~/Views/Shared/Layouts/Classic.cshtml";
}


<div class="cn-info">

    @InfoView.Header("Cases")

    @foreach (var c in Model.Cases)
    {
        <div class="cn-info-menu-item">
            @c.ShortInfo
            <div style="margin-left: 40px">
                @Shared.ActionLink("Details", "Case", "Info", c.Id, "cn-info-link cn-info-link-action")
                @Shared.ActionLink("Proceed", "Case", "Run", c.Id, "cn-info-link cn-info-link-action")
            </div>
        </div>
    }

</div>

<h2>Cases</h2>