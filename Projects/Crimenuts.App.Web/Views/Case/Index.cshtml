@model Crimenuts.App.Web.Models.SchemaModel
@{
    ViewBag.Title = "Detective Cases";
    Layout = "~/Views/Shared/Layouts/Default.cshtml";
}

<h2>Cases</h2>

<ul>
    @foreach (var c in Model.Cases)
    {
        <li>
            @c.ShortInfo
            @Html.ActionLink("Details", "Info", new { id = c.Id })
            @Html.ActionLink("Proceed", "Run", new { id = c.Id })
        </li>
    }
</ul>   