@{
        // >> View | Process | Finish 
    @Finish()
}
@using Crimenuts.App.Web.Models
@using Crimenuts.Core.Game
@model ProcessModel

@functions
{
}

@helper Finish()
{
    switch (Model.State)
    {
        case State.Finished:
            @Result()
            break;
    }
}

@helper Result()
{
    @RoomView.Record(ResultInfo(), RoomView.ResultClass)
}

@helper ResultInfo()
{
    if (Model.Winner == Winner.Detective)
    {
        @Localization.Text("Game:Result:Detective")
    }
    if (Model.Winner == Winner.Murderers)
    {
        @Localization.Text("Game:Result:Murderers")

    }
}

